<div class='row col-md-12'>
  <div class='upload-form col-md-4 col-md-offset-4'>
    <div class="page-header"><h1>Upload Image</h1></div>
    <%= form_for @image, data: {parsley_validate: true} do |f| %>
      <div class="field">
        <%= f.label :tileset %>
        <%= f.text_field :tileset_name, :placeholder => "Tileset", required: true %>
      </div>

      <div class="field">
        <%= f.label :date_taken %>
        <%= f.text_field :date_taken, :placeholder => "#{DateTime.now.to_date}", required: true %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_field :description, :placeholder => "Description", required: true %>
      </div>

      <div class="field">
        <%= f.label :camera_type %>
        <%= f.text_field :camera_type, :placeholder => "DJI Phantom 3 Professional", required: true %>
      </div>

      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image_file, required: true %>
      </div>

      <%= f.submit 'Upload', class: 'btn btn-primary', :id => 'upload-submit' %>
    <% end %>
  </div>
</div>
